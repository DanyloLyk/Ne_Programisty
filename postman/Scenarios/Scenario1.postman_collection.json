	"item": [
		{
			"name": "1.Registration",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							" pm.test(\"Successful registration\", function () {\r",
							"        pm.response.to.have.status(200);\r",
							"    });\r",
							"\r",
							"    // Отримуємо те, що ми відправили на сервер\r",
							"    var requestData = JSON.parse(pm.request.body.raw);\r",
							"\r",
							"    // Зберігаємо email, пароль та нікнейм у пам'ять Postman\r",
							"    pm.collectionVariables.set(\"current_email\", requestData.email);\r",
							"    pm.collectionVariables.set(\"current_password\", requestData.password);\r",
							"    pm.collectionVariables.set(\"current_nickname\", requestData.nickname); \r",
							"\r",
							"    console.log(\"Registered: \" + requestData.nickname);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n      \"nickname\": \"user_{{$randomInt}}\",\n      \"email\": \"user_{{$randomInt}}@test.com\",\n      \"password\": \"Password123!\",\n      \"password_confirm\": \"Password123!\",\n      \"status\": \"User\",\n      \"privilege\": \"Default\"\n    }"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/users/",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"users",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "2.Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Login successful\", function () {\r",
							"        pm.response.to.have.status(200);\r",
							"    });\r",
							"\r",
							"    var jsonData = pm.response.json();\r",
							"    var token = jsonData.access_token;\r",
							"\r",
							"    // 1. Зберігаємо токен, щоб інші запити його бачили\r",
							"    pm.collectionVariables.set(\"access_token\", token);\r",
							"\r",
							"    // 2. Розшифровуємо токен, щоб дістати ID юзера\r",
							"    var base64Url = token.split('.')[1];\r",
							"    var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');\r",
							"    var jsonPayload = decodeURIComponent(atob(base64).split('').map(function(c) {\r",
							"        return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);\r",
							"    }).join(''));\r",
							"\r",
							"    var tokenData = JSON.parse(jsonPayload);\r",
							"\r",
							"    // 3. Шукаємо ID (воно може називатися 'sub', 'id' або 'user_id')\r",
							"    // Твій бекенд скоріше за все використовує 'sub' (стандарт) або 'identity'\r",
							"    if(tokenData.sub) {\r",
							"        pm.collectionVariables.set(\"user_id\", tokenData.sub);\r",
							"    } else if (tokenData.id) {\r",
							"         pm.collectionVariables.set(\"user_id\", tokenData.id);\r",
							"    } else if (tokenData.user_id) {\r",
							"         pm.collectionVariables.set(\"user_id\", tokenData.user_id);\r",
							"    } else if (tokenData.identity) {\r",
							"         pm.collectionVariables.set(\"user_id\", tokenData.identity);\r",
							"    }\r",
							"\r",
							"    console.log(\"Token saved. User ID: \" + pm.collectionVariables.get(\"user_id\"));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n      \"username\": \"{{current_nickname}}\",\n      \"password\": \"{{current_password}}\"\n    }"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/auth/",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"auth",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "3.GetProfile",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Profile received\", function () {\r",
							"        pm.response.to.have.status(200);\r",
							"    });\r",
							"\r",
							"    // Перевіряємо, чи це той самий емейл, який ми реєстрували\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.test(\"Email matches\", function () {\r",
							"        pm.expect(jsonData.email).to.eql(pm.collectionVariables.get(\"current_email\"));\r",
							"    });"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{access_token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n      \"nickname\": \"user_{{$randomInt}}\",\n      \"email\": \"user_{{$randomInt}}@test.com\",\n      \"password\": \"Password123!\",\n      \"password_confirm\": \"Password123!\",\n      \"status\": \"User\",\n      \"privilege\": \"Default\"\n    }"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/users/{{user_id}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"users",
						"{{user_id}}"
					]
