		{
			"name": "4.GetAllNews",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"\r",
							"    // Шукаємо новину з нашою назвою\r",
							"    // (Або просто беремо останню, якщо ми впевнені, що ми єдині адміни)\r",
							"    var myNews = jsonData.find(n => n.name === \"Турнір з CS2 для програмістів\");\r",
							"\r",
							"    if (myNews) {\r",
							"        pm.collectionVariables.set(\"news_id\", myNews.id);\r",
							"        console.log(\"News ID found: \" + myNews.id);\r",
							"    } else {\r",
							"        // Якщо не знайшли по імені, беремо останню додану (у списку зазвичай остання в кінці або на початку)\r",
							"        // Припустимо, нові в кінці:\r",
							"        var lastNews = jsonData[jsonData.length - 1];\r",
							"        pm.collectionVariables.set(\"news_id\", lastNews.id);\r",
							"        console.log(\"Took last news ID: \" + lastNews.id);\r",
							"    }\r",
							"\r",
							"    pm.test(\"News ID extracted\", function () {\r",
							"        pm.expect(pm.collectionVariables.get(\"news_id\")).to.not.be.undefined;\r",
							"    });"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
